{
  "name": "Starter",
  "version": "1.1.0",
  "description": "Drupal starter site",
  "scripts": {
    "watch": "gulp default",
    "build": "gulp build",
    "validate-css": "gulp css:lint",
    "validate-js": "gulp js:lint",
    "test-js": "gulp js:test"
  },
  "author": "Blue State Digital",
  "license": "ISC",
  "private": true,
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-plugin-lodash": "^3.3.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.24.1",
    "browser-sync": "^2.23.7",
    "gulp": "^3.9.0",
    "gulp-cache": "^0.2.10",
    "gulp-chug": "^0.4.2",
    "gulp-clean-css": "^2.0.3",
    "gulp-css-globbing": "^0.1.8",
    "gulp-debug": "^2.1.2",
    "gulp-imagemin": "^2.3.0",
    "gulp-modernizr": "^1.0.0-alpha",
    "gulp-notify": "^2.2.0",
    "gulp-rename": "^1.2.2",
    "gulp-size": "^2.1.0",
    "gulp-sourcemaps": "^1.5.2",
    "gulp-stylelint": "^2.0.2",
    "gulp-svg-sprite": "^1.3.3",
    "stylelint-config-standard": "^9.0.0",
    "stylelint-order": "^0.8.1"
  },
  "dependencies": {
    "babel-loader": "^7.0.0",
    "backstopjs": "^3.2.15",
    "chai": "^3.5.0",
    "del": "^3.0.0",
    "dom-closest": "^0.2.0",
    "eslint": "^3.8.1",
    "eslint-config-google": "^0.7.0",
    "fontfaceobserver": "^2.0.5",
    "gulp-autoprefixer": "^3.1.1",
    "gulp-eslint": "^3.0.1",
    "gulp-if": "^2.0.1",
    "gulp-mocha": "^3.0.1",
    "gulp-sass": "^3.1.0",
    "gulp-shell": "^0.6.5",
    "gulp-uglify": "^2.0.0",
    "gulp-util": "^3.0.7",
    "imagesready": "^0.2.2",
    "js-cookie": "^2.1.4",
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1",
    "modularscale-sass": "^2.1.1",
    "pubsub-js": "^1.5.4",
    "select2": "^4.0.3",
    "slick-carousel": "^1.6.0",
    "stream-browserify": "*",
    "stylelint": "^6.6.0",
    "susy": "^2.2.12",
    "svg4everybody": "^2.1.4",
    "webpack": "^3.0.0",
    "webpack-bundle-analyzer": "^2.8.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "google"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true,
      "jquery": true,
      "es6": true
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "switch-colon-spacing": 0,
      "no-magic-numbers": [
        "error",
        {
          "ignore": [
            -1,
            0,
            1
          ]
        }
      ],
      "no-mixed-operators": "error",
      "no-unneeded-ternary": "error",
      "comma-dangle": [
        "error",
        "always-multiline"
      ]
    }
  }
}
