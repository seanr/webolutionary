{% set ss_base_class = ss_base_class|default('site-slogan') %}

<div {{ bem(ss_base_class, (ss_modifiers), ss_blockname) }}>
  {% include "@atoms/02-text/00-headings/_heading.twig" with {
    "heading_level": 3,
    "heading": siteslogan_title,
    "heading_url": siteslogan_link,
    "heading_blockname": ss_base_class,
    "heading_base_class": 'title',
    "heading_link_blockname": ss_base_class,
    "heading_link_base_class": 'link',
  } %}
  {% include "@atoms/02-text/text/01-paragraph.twig" with {
    "paragraph_content": siteslogan_text,
    "paragraph_blockname": ss_base_class,
    "paragraph_base_class": card_body_base_class|default('body'),
  } %}
</div>
